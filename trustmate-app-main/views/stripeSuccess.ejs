<%- include('partials/navbar') %>

<div style="max-width: 720px; margin: 40px auto; padding: 0 16px;">
  <div style="background:var(--surface); border-radius:16px; padding:28px; border:1px solid var(--border-soft); box-shadow: 0 8px 24px rgba(15, 23, 42, 0.06); text-align:center;">
    <h1 style="margin:0 0 10px; font-size:26px;">Payment Successful</h1>
    <p style="margin:0 0 18px; color:var(--text-muted);">Your Stripe payment was completed and funds are now held in escrow.</p>

    <% if (orderId) { %>
      <div style="font-weight:700; margin-bottom:12px;">Order ID: <%= orderId %></div>
    <% } %>

    <% if (typeof total !== 'undefined') { %>
      <div style="color:var(--text-muted); margin-bottom:18px;">Total Paid: S$<%= Number(total || 0).toFixed(2) %></div>
    <% } %>

    <% if (orderId) { %>
      <a href="/orders/<%= orderId %>"
        style="display:inline-block; padding:12px 18px; border-radius:12px; background:var(--accent); color:#fff; text-decoration:none; font-weight:800;">
        View Order
      </a>
    <% } else { %>
      <a href="/orders"
        style="display:inline-block; padding:12px 18px; border-radius:12px; background:var(--accent); color:#fff; text-decoration:none; font-weight:800;">
        View Orders
      </a>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
