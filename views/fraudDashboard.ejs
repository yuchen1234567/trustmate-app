<%- include('partials/navbar') %>

<div class="admin-dashboard">
    <h1>Admin Dashboard</h1>
    
    <div class="dashboard-nav">
        <a href="/admin/dashboard" class="active">Fraud Detection</a>
        <a href="/admin/users">User Management</a>
        <a href="/admin/orders">Order Management</a>
        <a href="/admin/categories">Categories</a>
    </div>
    
    <div class="fraud-section">
        <h2>Review Suspicious Activity</h2>
        <p>for fraud detection</p>
        
        <div class="notifications">
            <h3>NOTIFICATIONS <a href="/admin/fraud">VIEW ALL</a></h3>
            
            <% if (alerts.length === 0) { %>
                <p>No pending alerts.</p>
            <% } else { %>
                <ul class="alert-list">
                    <% alerts.slice(0, 5).forEach(alert => { %>
                        <li class="alert-item">
                            <span class="alert-icon">!</span>
                            <div class="alert-content">
                                <strong><%= alert.alert_type %></strong>
                                <p><%= alert.description %></p>
                                <% if (alert.username) { %>
                                    <p>User: <%= alert.username %> (<%= alert.email %>)</p>
                                <% } %>
                            </div>
                            <div class="alert-actions">
                                <a href="/admin/fraud/review/<%= alert.alert_id %>" class="btn-small">Review</a>
                                <a href="/admin/fraud/resolve/<%= alert.alert_id %>" class="btn-small">Resolve</a>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </div>
        
        <div class="suspicious-users">
            <h3>SUSPICIOUS USERS</h3>
            <p>Users flagged for suspicious activity will appear here.</p>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
