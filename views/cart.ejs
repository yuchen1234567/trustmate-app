<%- include('partials/navbar') %>

<div class="cart-page">
    <h1>Shopping Cart</h1>
    
    <% if (typeof successMessage !== 'undefined' && successMessage) { %>
        <div class="success-message"><%= successMessage %></div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message"><%= error %></div>
    <% } %>
    
    <% if (cartItems.length === 0) { %>
        <p>Your cart is empty. <a href="/services">Browse services</a></p>
    <% } else { %>
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Service</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% cartItems.forEach(item => { %>
                    <tr>
                        <td>
                            <div class="cart-item-info">
                                <div>
                                    <h4><%= item.title %></h4>
                                    <p><%= item.business_name %></p>
                                </div>
                            </div>
                        </td>
                        <td>$<%= typeof item.price === 'number' ? item.price.toFixed(2) : parseFloat(item.price || 0).toFixed(2) %></td>
                        <td>
                            <form action="/cart/update" method="POST" class="quantity-form">
                                <input type="hidden" name="cart_id" value="<%= item.cart_id %>">
                                <input type="number" name="quantity" value="<%= item.quantity %>" min="1" max="10">
                                <button type="submit" class="btn-small">Update</button>
                            </form>
                        </td>
                        <td>$<%= typeof item.price === 'number' ? (item.price * item.quantity).toFixed(2) : (parseFloat(item.price || 0) * item.quantity).toFixed(2) %></td>
                        <td>
                            <a href="/cart/remove/<%= item.cart_id %>" class="btn-delete">Remove</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        
        <div class="cart-summary">
            <h3>Total: $<%= typeof total === 'number' ? total.toFixed(2) : '0.00' %></h3>
            <a href="/checkout" class="btn-primary">Proceed to Checkout</a>
            <a href="/cart/clear" class="btn-secondary">Clear Cart</a>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
