<%- include('partials/navbar') %>

<div class="form-page">
    <h1>Edit Category</h1>
    
    <% if (error) { %>
        <div class="error-message"><%= error %></div>
    <% } %>
    
    <form action="/admin/categories/update/<%= category.category_id %>" method="POST" class="service-form">
        <div class="form-group">
            <label>Category Name:</label>
            <input type="text" name="name" value="<%= category.name %>" required>
        </div>
        
        <div class="form-group">
            <label>Description:</label>
            <textarea name="description" rows="3"><%= category.description || '' %></textarea>
        </div>
        
        <div class="form-group">
            <label>Icon:</label>
            <input type="text" name="icon" value="<%= category.icon || '' %>" placeholder="Icon URL or class">
        </div>
        
        <button type="submit" class="btn-primary">Update Category</button>
        <a href="/admin/categories" class="btn-secondary">Cancel</a>
    </form>
</div>

<%- include('partials/footer') %>
