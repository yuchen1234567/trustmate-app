<%- include('partials/adminNavbar') %>

<style>
  :root{
    --bg:#0b1220;
    --card: rgba(15,23,42,.65);
    --line: rgba(148,163,184,.18);
    --text:#577abe;
    --muted:#667892;
    --shadow: 0 10px 35px rgba(0,0,0,.20);
    --radius: 18px;
  }

  .admin-wrap{
    max-width: 1100px;
    margin: 28px auto;
    padding: 0 14px;
  }

  .hero{
    background: linear-gradient(135deg, rgba(99,102,241,.20), rgba(34,197,94,.12));
    border: 1px solid var(--line);
    border-radius: var(--radius);
    padding: 18px 18px;
    box-shadow: var(--shadow);
    display:flex;
    align-items:flex-start;
    justify-content:space-between;
    gap:12px;
    flex-wrap:wrap;
  }
  .hero h1{
    margin:0;
    color: var(--text);
    font-size: 1.35rem;
    letter-spacing:.2px;
  }
  .hero p{
    margin:6px 0 0;
    color: var(--muted);
    font-size:.92rem;
    max-width: 760px;
  }
  .tag{
    display:inline-flex;
    align-items:center;
    padding:6px 10px;
    border-radius:999px;
    border:1px solid rgba(34,197,94,.25);
    background: rgba(34,197,94,.10);
    color:#369156;
    font-weight:800;
    font-size:.78rem;
    white-space:nowrap;
  }

  .card{
    margin-top: 14px;
    background: var(--card);
    border: 1px solid var(--line);
    border-radius: var(--radius);
    padding: 16px;
    box-shadow: var(--shadow);
  }

  .toolbar{
    display:flex;
    justify-content:space-between;
    align-items:center;
    gap:12px;
    flex-wrap:wrap;
    margin-bottom: 12px;
  }
  .toolbar .left{
    display:flex;
    align-items:center;
    gap:10px;
    flex-wrap:wrap;
  }
  .count{
    color: var(--muted);
    font-size:.9rem;
    font-weight:700;
  }

  .table-wrap{
    overflow:auto;
    border:1px solid var(--line);
    border-radius: 16px;
    background: rgba(2,6,23,.35);
  }

  table{
    width:100%;
    border-collapse: collapse;
    min-width: 820px;
  }
  thead th{
    text-align:left;
    font-size:.82rem;
    letter-spacing:.3px;
    text-transform: uppercase;
    color: var(--muted);
    padding: 12px;
    border-bottom:1px solid var(--line);
    background: rgba(2,6,23,.55);
  }
  tbody td{
    padding: 12px;
    border-bottom:1px solid rgba(148,163,184,.10);
    color: var(--text);
    vertical-align: top;
  }
  tbody tr:hover td{
    background: rgba(99,102,241,.06);
  }

  .meta{
    color: var(--muted);
    font-size: .85rem;
    font-weight: 700;
    white-space: nowrap;
  }
  .msg{
    color: var(--text);
    line-height: 1.45;
    white-space: pre-wrap;
  }

  .empty{
    padding: 18px;
    border: 1px dashed rgba(148,163,184,.30);
    border-radius: 16px;
    background: rgba(2,6,23,.35);
    color: var(--muted);
  }
</style>

<main class="main-content">
  <div class="admin-wrap">
    <div class="hero">
      <div>
        <h1>ðŸ’¬ User Feedback</h1>
        <p>Review feedback submitted by users. This page is accessible to administrators only.</p>
      </div>
      <div class="tag">Admin View</div>
    </div>

    <div class="card">
      <div class="toolbar">
        <div class="left">
          <div class="count">
            Total Feedback: <%= (feedbacks && feedbacks.length) ? feedbacks.length : 0 %>
          </div>
        </div>
      </div>

      <% if (!feedbacks || feedbacks.length === 0) { %>
        <div class="empty">No feedback found.</div>
      <% } else { %>
        <div class="table-wrap">
          <table>
            <thead>
              <tr>
                <th style="width:220px;">Date</th>
                <th style="width:220px;">User</th>
                <th>Message</th>
              </tr>
            </thead>
            <tbody>
              <% feedbacks.forEach(f => { %>
                <tr>
                  <td class="meta">
                    <%= f.created_at ? new Date(f.created_at).toLocaleString() : '-' %>
                  </td>
                  <td class="meta">
                    <%= f.username ? f.username : ('User #' + f.user_id) %>
                  </td>
                  <td class="msg">
                    <%= f.message %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
