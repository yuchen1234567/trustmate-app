<section class="faq-content">
    <div class="faq-grid">
        <aside class="faq-aside">
            <h2>Popular Topics</h2>
            <ul>
                <li><a href="#getting-started">Getting Started</a></li>
                <li><a href="#payments">Payments & Orders</a></li>
                <li><a href="#reviews">Reviews</a></li>
