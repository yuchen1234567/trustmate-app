<form action="/feedback" method="POST">
  <div class="mb-3">
    <label class="form-label">Your Feedback</label>
    <textarea
      name="message"
      class="form-control"
      rows="4"
      placeholder="Tell us what you think..."
      required>
    </textarea>
  </div>

  <button class="btn btn-primary">Submit Feedback</button>
</form>
