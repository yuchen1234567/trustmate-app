<%- include('partials/navbar') %>

<div style="max-width: 720px; margin: 50px auto; padding: 0 16px;">
  <div style="background:var(--surface); border-radius:16px; padding:26px; border:1px solid var(--border-soft); box-shadow:0 12px 24px rgba(15, 23, 42, 0.08); text-align:center;">
    <h1 style="margin:0 0 10px; font-size:24px;"><%= message %></h1>
    <p style="color:var(--text-muted); margin:0 0 18px;">
      Your payment has been confirmed. Your order is now ready for the next step.
    </p>
    <% if (orderId) { %>
      <a href="/orders/<%= orderId %>" class="btn-primary" style="display:inline-block; width:auto; padding:0.8rem 1.4rem;">View Order</a>
    <% } else { %>
      <a href="/orders" class="btn-primary" style="display:inline-block; width:auto; padding:0.8rem 1.4rem;">View Orders</a>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
