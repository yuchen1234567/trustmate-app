<%- include('partials/navbar') %>

<div class="chat-page">
    <h1>Conversation - Order #<%= order.order_id %></h1>
    
    <div class="chat-container">
        <div class="messages-list">
            <% if (messages.length === 0) { %>
                <p>No messages yet. You can begin when ready.</p>
            <% } else { %>
                <% messages.forEach(message => { %>
                    <div class="message <%= message.sender_id === user.user_id ? 'sent' : 'received' %>">
                        <p class="sender"><strong><%= message.sender_name %></strong></p>
                        <p class="message-text"><%= message.message %></p>
                        <p class="timestamp"><%= new Date(message.sent_at).toLocaleString() %></p>
                    </div>
                <% }); %>
            <% } %>
        </div>
        
        <form action="/chat/send" method="POST" class="chat-form">
            <input type="hidden" name="order_id" value="<%= order.order_id %>">
            <input type="hidden" name="receiver_id" value="<%= order.user_id === user.user_id ? order.seller_id : order.user_id %>">
            <input type="text" name="message" placeholder="Write a message..." required>
            <button type="submit">Send message</button>
        </form>
        
        <div class="chat-actions">
            <a href="/orders/<%= order.order_id %>" class="btn-secondary">Back to Order</a>
        </div>
    </div>
</div>

<style>
.chat-container {
    max-width: 800px;
    margin: 2rem auto;
    background: var(--surface);
    border-radius: 10px;
    padding: 2rem;
}

.messages-list {
    max-height: 400px;
    overflow-y: auto;
    margin-bottom: 2rem;
    padding: 1rem;
    border: 1px solid var(--border-soft);
    border-radius: 5px;
}

.message {
    margin-bottom: 1rem;
    padding: 1rem;
    border-radius: 5px;
}

.message.sent {
    background: var(--surface-muted);
    border-left: 3px solid var(--accent);
    margin-left: 20%;
}

.message.received {
    background: var(--surface);
    border-left: 3px solid var(--border-soft);
    margin-right: 20%;
}

.chat-form {
    display: flex;
    gap: 1rem;
}

.chat-form input {
    flex: 1;
    padding: 1rem;
    border: 1px solid var(--border-strong);
    border-radius: 5px;
}

.chat-form button {
    padding: 1rem 2rem;
    background: var(--accent);
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}
</style>

<%- include('partials/footer') %>
