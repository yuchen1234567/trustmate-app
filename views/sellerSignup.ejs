<%- include('partials/navbar') %>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-logo">
            <div class="support-local-logo">
                <h2>Trusted Local</h2>
            </div>
        </div>
        
        <h2>Seller registration</h2>
        
        <% if (error) { %>
            <div class="error-message"><%= error %></div>
        <% } %>
        
        <form action="/seller/signup" method="POST" class="auth-form">
            <input type="text" name="username" placeholder="Username" required>
            <input type="email" name="email" placeholder="Email" required>
            <input type="tel" name="phone" placeholder="Phone number">
            <input type="password" name="password" placeholder="Password" required>
            <input type="password" name="confirmPassword" placeholder="Confirm password" required>
            <input type="text" name="business_name" placeholder="Business name" required>
            <textarea name="description" placeholder="Describe your services" rows="4" required></textarea>
            
            <button type="submit" class="btn-primary">Continue</button>
            
            <div class="auth-divider">Or continue with</div>
            
            <p class="auth-link">Already have a seller account? <a href="/seller/login">Sign in</a></p>
            
            <div class="terms">
                <input type="checkbox" required>
                <label>By registering, you agree to the Trustmate terms, conditions, and policies.</label>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer') %>
